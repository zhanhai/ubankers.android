<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/b1"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@drawable/handbg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/shenfen_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="实名认证"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/redact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="编辑"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_shenfenyanzheng_center"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/b1"
        android:background="#ffffffff"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/shengfenyanheng_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="#ffffffff"
            android:hint="真实姓名"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/layout_shenfenyanzheng_center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#999999" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/layout_shenfenyanzheng_center"
        android:layout_marginTop="1dp"
        android:background="#ffffffff"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/shengfenyanheng_haoma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="#ffffffff"
            android:hint="居民身份证号"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#999999" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shenfenzhenga"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/shenfenzhenga" />

        <ImageView
            android:id="@+id/shenfenzhengb"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/shenfenzhengb" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="1dp" >

        <Button
            android:id="@+id/shengfengyanzheng_queding"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:singleLine="true"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="29dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/idcard_mark"
            android:visibility="gone"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/exclamation_mark"
             />

        <TextView
            android:id="@+id/idcard_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>