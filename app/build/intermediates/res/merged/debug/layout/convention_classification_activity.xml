<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
               android:background="@drawable/handbg"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/convention_record_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back" />
            </LinearLayout>

            <TextView
                android:id="@+id/convention_telt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="购买记录"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:maxEms="18"
                android:singleLine="true"
                android:ellipsize="end"
                 />
        </RelativeLayout>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f0eff5"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/convention_record"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#f0eff5"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/convention_record_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="已注册用户"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#999999"
                 />

            <View
                android:id="@+id/convention_recordview"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#0066cb"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noconvention_record"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#f0eff5"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/noconvention_recordtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="未注册用户"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#999999" />

            <View
                android:id="@+id/noconvention_recordview"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#0066cb"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/convention_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
