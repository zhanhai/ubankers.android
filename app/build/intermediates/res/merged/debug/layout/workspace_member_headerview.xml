<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <LinearLayout
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:layout_margin="10dp">
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_weight="3"
       android:gravity="center"
       android:orientation="vertical">
    <cn.com.ubankers.www.widget.CircleImg
      android:id="@+id/memberImageView"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:scaleType="centerCrop"
      android:src="@drawable/personal_center">
    </cn.com.ubankers.www.widget.CircleImg>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_weight="1"
       android:gravity="center"
       android:orientation="vertical">
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_weight="1"
       android:gravity="center"
       android:orientation="horizontal">
       <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="2"
         android:text="姓       名" />
           <TextView 
         android:id="@+id/memberNameView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:text="ddfs" />
      </LinearLayout> 
      <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_weight="1"
       android:gravity="center"
        android:orientation="horizontal">
        <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:layout_weight="2"
         android:text="手机号码"  />
         <TextView 
         android:id="@+id/memberMobileView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:layout_weight="1"
         android:text="ddfs"  />
        </LinearLayout> 
           <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_weight="1"
       android:gravity="center"
       android:orientation="horizontal">
        <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
          android:layout_weight="2"
         android:text="加入时间" /> 
           <TextView 
         android:id="@+id/memberDateView"
         android:layout_width="match_parent"
          android:layout_weight="1"
         android:layout_height="wrap_content"
         android:text="ddfs"  />
       </LinearLayout>
   </LinearLayout>
   </LinearLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fl_bg">      
    <RelativeLayout 
        android:id="@+id/rl6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">
           
            <View 
               android:id="@+id/vi2"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#cccccc"
               android:layout_below="@id/tv2"/>
           
              <LinearLayout 
               android:id="@+id/ll7"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/tv2"
               android:layout_margin="7dp">
               <ImageView 
                   android:id="@+id/im3"
                   android:layout_width="2.5dp"
                   android:layout_height="13dp"
                   android:background="#0066cc"
                   android:layout_marginLeft="5dp"
                   android:layout_gravity="center_vertical"/>
               <TextView 
                   android:id="@+id/headerView2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="个人业绩"
                   android:textColor="#999999"
                   android:layout_marginLeft="5dp"/>
           </LinearLayout> 
            <View 
               android:id="@+id/vi3"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#cccccc"
               android:layout_below="@id/ll7"/> 
               <TextView 
               android:id="@+id/tv4"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_below="@id/vi3"
               android:background="#f0eff5"
               android:textColor="#0066cc"
               android:text="1000000"
               android:gravity="center"/>
               <View 
               android:id="@+id/vi4"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#cccccc"
               android:layout_below="@id/tv4"/> 
               <LinearLayout 
               android:id="@+id/ll8"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/vi4"
               android:layout_margin="7dp">
               <ImageView 
                   android:id="@+id/im8"
                   android:layout_width="2.5dp"
                   android:layout_height="13dp"
                   android:background="#0066cc"
                   android:layout_marginLeft="5dp"
                   android:layout_gravity="center_vertical"/>
               <TextView 
                   android:id="@+id/headerView3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="工作记录"
                   android:textColor="#999999"
                   android:layout_marginLeft="5dp"/>
           </LinearLayout>
           <View 
               android:id="@+id/vi8"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#cccccc"
               android:layout_below="@id/ll8"/>  

        
    </RelativeLayout>
</ScrollView>  

</LinearLayout>
