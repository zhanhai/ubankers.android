<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0eef5" >
     <RelativeLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="45dip"
    	android:gravity="center_vertical"
    	   android:background="@drawable/handbg"
     >
		<LinearLayout
            android:id="@+id/caifushi_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />
        </LinearLayout>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="投资记录"
	        android:textColor="#FFFFFF"
	        android:textSize="20sp" />
	</RelativeLayout>
     
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" 
        android:gravity="center"
        android:background="#FFFFFF"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/solid_score6"
        android:orientation="horizontal" >
        <TextView 
            android:id="@+id/caifushi_shengpijingdu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text=""
            android:background="@drawable/shapsimple"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_weight="1"
            />
      <View 
          android:id="@+id/investor_view1" 
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#D51A1B"
        android:layout_gravity="center_horizontal"
    />
    <View  
        android:id="@+id/investor_view2"
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#D51A1B"
        
        android:layout_gravity="center_horizontal"
    />
        <TextView 
            android:id="@+id/caifushi_mujijindu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textColor="#D51A1B"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    </RelativeLayout>

 <ListView
     android:id="@+id/caifushi_listview"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" >
 </ListView>
	  
</LinearLayout>
