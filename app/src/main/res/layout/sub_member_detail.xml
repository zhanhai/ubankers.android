<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0eff5">
    <LinearLayout
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:layout_marginLeft="-1dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_weight="3"
       android:gravity="center"
       android:orientation="vertical">
    <cn.com.ubankers.www.widget.CircleImg
      android:id="@+id/memberImageView"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:scaleType="centerCrop"
      android:src="@drawable/personal_center">
    </cn.com.ubankers.www.widget.CircleImg>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_weight="1"
       android:gravity="center"
       android:orientation="vertical">
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_weight="1"
       android:gravity="center"
       android:orientation="horizontal">
       <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="3"
         android:text="姓       名" />
           <TextView 
         android:id="@+id/memberNameView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:text="ddfs" />
      </LinearLayout> 
      <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_weight="1"
       android:gravity="center"
        android:orientation="horizontal">
        <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:layout_weight="3"
         android:text="手机号码"  />
         <TextView 
         android:id="@+id/memberMobileView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:layout_weight="1"
         android:text="ddfs"  />
        </LinearLayout> 
           <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_weight="1"
       android:gravity="center"
       android:orientation="horizontal">
        <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
          android:layout_weight="3"
         android:text="加入时间" /> 
           <TextView 
         android:id="@+id/memberDateView"
         android:layout_width="match_parent"
          android:layout_weight="1"
         android:layout_height="wrap_content"
         android:text="ddfs"  />
       </LinearLayout>
   </LinearLayout>
   </LinearLayout>

    <ImageView
        android:id="@+id/maintreasureImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/maintreasure" />

</RelativeLayout>
