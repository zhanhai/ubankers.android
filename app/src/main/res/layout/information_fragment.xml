<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chanpingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
         android:orientation="vertical">
		
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >
            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#8f8f8f"
                android:text="    投资简介"/>
            
            <TextView
                android:id="@+id/information_briefIntroduction"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""/>
        </LinearLayout>
      <View android:layout_height="5dip"
            android:layout_width="match_parent"/>
        
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >
            <TextView
               
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#8f8f8f"
                android:text="    担  保  人"/>
            
            <TextView
                  android:id="@+id/information_bondsman"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""/>
        </LinearLayout>
        <View android:layout_height="5dip"
            android:layout_width="match_parent"/>
        
         
          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >
            <TextView
            
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#8f8f8f"
                android:text="    抵  押  物"/>
            
            <TextView
                 android:id="@+id/information_guarantee"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""/>
        </LinearLayout>
          <View android:layout_height="5dip"
            android:layout_width="match_parent"/>
        
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >
            <TextView
               
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#8f8f8f"
                android:text="   运作方式"/>
            
            <TextView
                android:id="@+id/information_conters"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>