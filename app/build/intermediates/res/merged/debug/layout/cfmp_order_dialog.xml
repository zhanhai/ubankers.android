<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginTop="10dip">
		 <LinearLayout 
                	android:layout_marginTop="15dp"
                	android:layout_width="fill_parent"
            		android:layout_height="wrap_content"    
            >
              	<RadioGroup 
              	    android:id="@+id/radioGroup" 
              	    android:layout_width="wrap_content" 
              	    android:layout_height="wrap_content"
              	    android:orientation="horizontal">
    				<RadioButton 
    				    android:layout_width="wrap_content" 
    				    android:layout_height="wrap_content" 
    				    android:id="@+id/radio_unregistered_intervor" 
    				    android:text="未注册投资者" 
    				    android:textColor="@android:color/black" 
    				    android:textSize="15sp"
    				    android:layout_marginLeft="10dip"
    				    >
    				</RadioButton>
    				<RadioButton 
    				    android:layout_width="wrap_content" 
    				    android:layout_height="wrap_content" 
    				    android:id="@+id/radio_registered_intervor" 
    				    android:text="注册投资者"
    			        android:textColor="@android:color/black"
    				    android:textSize="15sp"
    				    android:layout_marginLeft="20dip">
    				</RadioButton>      
  				</RadioGroup>
           </LinearLayout>
     <cn.com.ubankers.www.widget.ClearEditTextView
        android:id="@+id/unregistered_name"   
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:padding="5dip"   
        android:textColorHint="#AAAAAA"  
        android:textSize="15dip"  
        android:singleLine="true"  
        android:hint="请输入/选择投资者名称(昵称)"  
        android:layout_marginTop="10dip"
        android:layout_margin="10dip"               
        android:background="@drawable/order_edittext"
        android:drawableRight="@drawable/delete_selector"
        android:textColor="@android:color/black"
        android:visibility="gone"
    /> 
    <cn.com.ubankers.www.widget.ClearEditTextView
        android:id="@+id/registered_name"   
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:padding="5dip"   
        android:textColorHint="#AAAAAA"  
        android:textSize="15dip"  
        android:singleLine="true"  
        android:hint="请输入/选择投资者名称(昵称)"  
        android:layout_marginTop="10dip"
        android:layout_margin="10dip"               
        android:background="@drawable/order_edittext"
        android:drawableRight="@drawable/delete_selector"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:editable="false"
    />
	 
	 <cn.com.ubankers.www.widget.ClearEditTextView
        android:id="@+id/cfmp_number"   
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:padding="5dip"   
        android:textColorHint="#AAAAAA"  
        android:textSize="15dip"  
        android:singleLine="true"  
        android:hint="请输入您的手机号"  
        android:layout_marginTop="10dip"
        android:layout_margin="10dip"               
        android:background="@drawable/order_edittext"
        android:drawableRight="@drawable/delete_selector"
        android:numeric="integer"
        android:textColor="@android:color/black"
        android:editable="false"
    /> 
    <cn.com.ubankers.www.widget.ClearEditTextView 
        android:id="@+id/cfmp_money"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:padding="5dip" 
        android:textColorHint="#AAAAAA"  
        android:textSize="15dip"  
        android:singleLine="true"  
        android:hint="请输入您的预约金额(元)" 
        android:layout_marginTop="10dip"
        android:layout_margin="10dip" 
        android:background="@drawable/order_edittext"
        android:drawableRight="@drawable/delete_selector"
        android:numeric="integer"
        android:textColor="@android:color/black"
    /> 
    <TextView 
        android:id="@+id/cfmp_money_range"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="14sp"
        android:text="jdjdjhdhdhhd"
        android:layout_marginLeft="11dip"
        android:visibility="gone"
     />
    <TextView 
    	android:id="@+id/cfmp_increase_money"    
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="14sp"
        android:layout_marginLeft="11dip"
        android:text="jkdkjdkjdlkdlklk"
        android:layout_marginTop="10dip"
        android:visibility="gone"
    />
    <LinearLayout 
     		android:layout_width="match_parent"
     		android:layout_height="wrap_content"
     		android:orientation="horizontal" 
     		android:gravity="center"
     		android:layout_marginTop="30dip"  
     >
        <TextView 
            android:layout_weight="1"
         	android:layout_width="0dp"
         	android:layout_height="wrap_content"   
            android:text="起投金额:" 
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:gravity="center"
         />
        <TextView
            android:id="@+id/cfmp_investment_amount" 
            android:layout_weight="1"
         	android:layout_width="0dp"
         	android:layout_height="wrap_content"  
         	android:text="5000000" 
         	android:textColor="#AAAAAA"         	
         />
        <TextView 
            android:layout_weight="1"
         	android:layout_width="0dp"
         	android:layout_height="wrap_content"
         	android:text="递增金额:"
         	android:textSize="14sp"
         	android:textColor="#ff0000" 
         	android:gravity="center"
         />
        <TextView 
            android:id="@+id/cfmp_increment_amount"
            android:layout_weight="1"
         	android:layout_width="0dp"
         	android:layout_height="wrap_content"
         	android:text="1000000"
         	android:textColor="#ff0000" 
         />
    </LinearLayout>
	<TextView
            android:id="@+id/cfmp_okay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="确 认"
            android:gravity="center"
            android:background="@drawable/rounded_edittext"
            android:textColor="#ffffff"
            android:layout_margin="40dip"
            android:textSize="15sp"/>
</LinearLayout>