      <cn.com.ubankers.www.widget.MyListView 
             android:id="@+id/treasureListView"
             android:layout_width="match_parent"
             android:layout_height="match_parent">  
         </cn.com.ubankers.www.widget.MyListView >
</LinearLayout>
