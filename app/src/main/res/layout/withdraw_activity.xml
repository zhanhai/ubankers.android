<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff5"
    android:orientation="vertical" >
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
              android:background="@drawable/handbg"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/withdraw_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="提现"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:text="确定"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </RelativeLayout>
        
   <LinearLayout
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
    			   android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                   
 
                    <cn.com.ubankers.www.widget.ClearEditTextView
                      android:id="@+id/Withdrawal_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f0eff5"
                        android:hint="请输入提现金额"
                        android:inputType="numberDecimal"
                        android:textColorHint="#999999"
                        android:textSize="15sp"/>
                        

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/loginPassword"
                        android:layout_marginTop="10dip"
                        android:background="#999999" />
                    
                    
                 <TextView
                     android:id="@+id/cost"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:text="提现需扣除手续费"
                 />
                  <TextView
                android:id="@+id/withdraw_balance"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="可用余额："
                 android:textColor="#999999"
                />
                   <TextView
                        android:layout_marginTop="5dp"
                         android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="到账时间：1—2个工作日"
               />
                    
                </LinearLayout>
    
    
                      
   
</RelativeLayout>
