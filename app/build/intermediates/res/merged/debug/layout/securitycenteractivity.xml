<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0eef5" >
     <RelativeLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="45.0dip"
    	android:gravity="center_vertical"
    	   android:background="@drawable/handbg"
     >
     <LinearLayout
              android:id="@+id/security_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="vertical" >
           <ImageView 
			android:layout_width="wrap_content"    
		    android:layout_height="wrap_content"
		 	android:background="@drawable/back"
		/>
        </LinearLayout>
		
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="个人信息"
	        android:textColor="#FFFFFF"
	        android:textSize="20sp" />
	</RelativeLayout>
	
   
       <View
        android:layout_marginLeft="10dip"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c8c7cc" 
     />
     <LinearLayout 
           	android:gravity="center"
          	android:layout_marginLeft="10dip"
	         android:layout_marginRight="10dp"
	 		android:layout_width="fill_parent"
	 		android:layout_height="40dip"
	 		android:orientation="horizontal"  
	 		android:background="#f0eef5" 
	 		android:id="@+id/layout_shenfenyanzheng_center"
	 >
	     <TextView 
	         android:id="@+id/Safety"
	         android:layout_width="0dip"
	         android:layout_height="wrap_content"
	         android:text="身份认证"
	         android:textSize="14sp"
	         android:textColor="@android:color/black"
	         android:layout_weight="1"
	         android:layout_marginLeft="10dip"
	      
	     />
	     <TextView 
	        android:id="@+id/idcard_status"
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"   
	        android:text=""
	        android:textColor="#999999"
	        android:layout_marginLeft="10dip"
	      />
	     
	  </LinearLayout>
	  <View
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c8c7cc" 
     />
	<LinearLayout 
	      android:gravity="center"
	    	 android:layout_marginLeft="10dip"
	         android:layout_marginRight="10dp"
	 		android:layout_width="fill_parent"
	 		android:layout_height="40dip"
	 		android:orientation="horizontal"  
	 		android:background="#f0eef5" 
	 		android:id="@+id/layout_youxiangrenzheng_center"
	 >
	     
	     <TextView 
	         android:id="@+id/client"
	         android:layout_width="0dip"
	         android:layout_height="wrap_content"
	         android:text="邮箱认证"
	         android:textSize="14sp"
	         android:textColor="@android:color/black"
	         android:layout_weight="1"
	         android:layout_marginLeft="10dip"
	     />
	     <TextView 
	        android:id="@+id/email_status"
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"   
	        android:text=""
	        android:textColor="#999999"
	        android:layout_marginLeft="10dip"
	      
	      />
	  </LinearLayout>
	  <View
	      android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c8c7cc" 
     />
	  <LinearLayout 
	        android:gravity="center"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dp"
	 		android:layout_width="fill_parent"
	 		android:layout_height="40dip"
	 		android:orientation="horizontal"  
	 		android:background="#f0eef5" 
	 		android:id="@+id/layout_yinhangkarenzheng_us"
	 >
	     
	     <TextView 
	         android:id="@+id/binding_email"
	         android:layout_width="0dip"
	         android:layout_height="wrap_content"
	         android:text="银行卡认证"
	         android:textSize="14sp"
	         android:textColor="@android:color/black"
	         android:layout_weight="1"
	         android:layout_marginLeft="10dip"
	     />
	     <TextView 
	        android:id="@+id/bankcard_status"
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"   
	        android:text=""
	        android:textColor="#999999"
	        android:layout_marginLeft="10dip"
	     
	      />
	  </LinearLayout>
	  <View
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c8c7cc" 
     />
	  

	   <LinearLayout 
	       android:gravity="center"
	        android:layout_marginLeft="10dip"
	         android:layout_marginRight="10dp"
	 		android:layout_width="fill_parent"
	 		android:layout_height="40dip"
	 		android:orientation="horizontal"  
	 		android:background="#f0eef5" 
	 		android:id="@+id/layout_mingpian"
	 		android:visibility="gone">
	     
	     <TextView 
	          android:layout_marginLeft="10dip"
	         android:layout_width="0dip"
	         android:layout_height="wrap_content"
	         android:text="绑定名片"
	         android:textSize="14sp"
	         android:textColor="@android:color/black"
	         android:layout_weight="1"/>
	     <TextView 
	        android:id="@+id/bankcard_mingpianzhuantai" 
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"   
	        android:text=""
	        android:textColor="#999999"
	        android:layout_marginLeft="10dip" />
	  </LinearLayout>
	   <View
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="#c8c7cc" />
</LinearLayout>
