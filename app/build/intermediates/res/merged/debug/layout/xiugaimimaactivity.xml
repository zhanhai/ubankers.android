<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eef5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0eef5"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
              android:background="@drawable/handbg"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/xiugai_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修改登录密码"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#c8c7cc" />

        <LinearLayout
            android:id="@+id/layout_shenfenyanzheng_center"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#f0eff5"
            android:orientation="horizontal" >

            <cn.com.ubankers.www.widget.ClearEditTextView
                android:id="@+id/xiugaimima_oldPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="#f0eff5"
                android:drawableRight="@drawable/delete_selector"
                android:hint="原始密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="#c8c7cc" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#f0eff5"
            android:orientation="horizontal" >

            <cn.com.ubankers.www.widget.ClearEditTextView
                android:id="@+id/xiugaimima_Password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="#f0eff5"
                android:drawableRight="@drawable/delete_selector"
                android:hint="新密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="#c8c7cc" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#f0eff5"
            android:orientation="horizontal" >

            <cn.com.ubankers.www.widget.ClearEditTextView
                android:id="@+id/xiugaimima_Passwordb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="#f0eff5"
                android:drawableRight="@drawable/delete_selector"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="#c8c7cc" />


    </LinearLayout>

        <Button
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/xiugai_minma"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:singleLine="true"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="15sp" />

</RelativeLayout>