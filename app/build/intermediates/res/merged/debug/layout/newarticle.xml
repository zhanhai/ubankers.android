<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="horizontal"
    android:padding="10dp">
    
    <RelativeLayout 
        android:id="@+id/rl1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="4">
        
        <LinearLayout 
           
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:orientation="vertical">
            <RelativeLayout 
                android:id="@+id/rl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                
                <ImageView 
                    android:id="@+id/iv2"
                    android:layout_width="3dp"
                    android:layout_height="20dp"
                    android:background="#0066cc"/>
                <TextView 
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你是我“独”家的记忆，摆在心"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxEms="15"
                    android:textSize="15sp"
                    android:textColor="#333333"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:id="@+id/rl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <TextView 
                    android:id="@+id/tvAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="独家记忆"
                    android:textSize="11sp"
                    android:textColor="#0066cc"/>
                <ImageView 
                    android:id="@+id/VIP"
                    android:layout_width="17dp"
                    android:layout_height="13dp"                    
                    android:layout_toRightOf="@id/tvAuthor"
                    android:layout_marginTop="1dp"
                    android:visibility="gone"/>
                <TextView 
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015.8.5"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:layout_toRightOf="@id/VIP"
                    android:layout_marginLeft="10dp"/>
                <ImageView 
                    android:id="@+id/articleType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:id="@+id/rl5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center">
                <TextView 
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:text="你是我独《家独家忆"
                    android:textColor="#666666"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:maxLines="2"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:lineSpacingMultiplier="1"/>
            </RelativeLayout>

            <RelativeLayout 
                android:id="@+id/rl6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <ImageView 
                    android:id="@+id/icon"
                    android:layout_width="13dp"
                    android:layout_height="17dp"                    
                    android:visibility="gone"/>
                <TextView 
                    android:id="@+id/label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="金融   趋势  啊啊"
                    android:textColor="#0066cc"
                    android:textSize="10sp"
                    android:layout_toRightOf="@id/icon"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"/>                          
                <TextView 
                    android:id="@+id/eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1dp"
                    android:gravity="bottom|right"/>
                <ImageView 
                    android:id="@+id/commentey"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/eyenew"
                    android:layout_toLeftOf="@id/eye"
                    android:layout_marginTop="1dp"
                    android:gravity="bottom|right"
                    android:layout_marginRight="3dp"/>
            </RelativeLayout>

        </LinearLayout>
        
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:id="@+id/rl2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="3dp">
    <ImageView
        android:id="@+id/ivAlbumPic"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/article"/>
    </RelativeLayout>

</LinearLayout>
