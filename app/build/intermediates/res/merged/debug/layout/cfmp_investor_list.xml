<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eef5"
    android:orientation="vertical"
    tools:context=".activity.CaifushiActivity" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical" >
        <View 
         		android:layout_width="3dip"   
                android:layout_height="20dip"
                android:background="#0066cb"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
         />

        <TextView
            android:id="@+id/productName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="标题" 
            android:textSize="15sp"
            android:textColor="#000000"
            android:maxLines="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="到期日"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="123456"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="认购费率"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="123456"
                android:textSize="10dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bbc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="总预约金额"
                android:textColor="#999999" 
                android:gravity="center_horizontal"
                android:textSize="10sp"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="总记录数"
                android:textColor="#999999"
                android:gravity="center_horizontal"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                 android:id="@+id/totalAmount" 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="diiododoioi"
                android:textColor="#0066cc" 
                android:gravity="center_horizontal"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/totalProNum" 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10000"
                android:textColor="#0066cc"
                android:gravity="center_horizontal" 
                android:textSize="20sp"/>
        </LinearLayout>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/arrowhead"
              android:layout_alignRight="@id/layout_ll" 
              android:layout_marginTop="13dip"
              android:layout_marginRight="10dip"
              />
        
    </RelativeLayout>
	<View
        	android:layout_marginTop="10dip"
        	android:layout_width="fill_parent"
        	android:layout_height="0.5dp"
        	android:background="#c8c7cc" 
    	/>

</LinearLayout>